{
  "name": "api-form-integrator",
  "version": "1.1.0",
  "description": "API ile entegre çalışan formları yöneten bir paket",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "browser": "./dist/integrator.cdn.js"
    },
    "./bin/create-integrator": "./dist/cjs/bin/create-integrator.cjs"
  },
  "scripts": {
    "test": "jest",
    "build:esm": "babel src -d dist/esm --extensions .js",
    "build:cjs": "babel src -d dist/cjs --extensions .js --config-file ./babel-cjs.config.js",
    "build:cdn": "webpack --mode production --config webpack.cdn.config.js",
    "build:bin": "cp bin/create-integrator.js dist/cjs/bin/create-integrator.cjs",
    "build": "npm run build:esm && npm run build:cjs && npm run build:cdn && npm run build:bin",
    "prepublish": "npm run build",
    "create-integrator": "node ./dist/cjs/bin/create-integrator.cjs"
  },
  "bin": {
    "create-integrator": "./dist/cjs/bin/create-integrator.cjs"
  },
  "keywords": [
    "api",
    "form",
    "integration",
    "axios",
    "service",
    "cdn",
    "laravel"
  ],
  "author": "İsmail Hallaç",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "sweetalert2": "^11.17.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.9",
    "babel-loader": "^9.2.1",
    "babel-plugin-add-module-exports": "^1.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "14"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ]
}